# Fabric Environment Configuration
# Copy this file to .env and fill in your actual API keys

# ============================================================================
# AI Provider API Keys
# ============================================================================

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_API_BASE=https://api.openai.com/v1

# Anthropic Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Google Gemini Configuration
GOOGLE_API_KEY=your-google-api-key-here

# Azure OpenAI Configuration (optional)
AZURE_OPENAI_API_KEY=your-azure-api-key-here
AZURE_OPENAI_ENDPOINT=your-azure-endpoint-here
AZURE_OPENAI_DEPLOYMENT_NAME=your-deployment-name-here

# Ollama Configuration (if using local Ollama)
OLLAMA_API_BASE=http://host.docker.internal:11434

# ============================================================================
# Fabric Configuration
# ============================================================================

# Default Model Selection
DEFAULT_VENDOR=openai
DEFAULT_MODEL=gpt-4o
DEFAULT_CONTEXT_LENGTH=128000

# Temperature and Generation Settings
DEFAULT_TEMPERATURE=0.7
DEFAULT_TOP_P=0.9
DEFAULT_PRESENCE_PENALTY=0.0
DEFAULT_FREQUENCY_PENALTY=0.0

# ============================================================================
# Service URLs (for Docker internal communication)
# ============================================================================

FABRIC_API_URL=http://fabric-api:8080

# ============================================================================
# Optional Features
# ============================================================================

# Enable/Disable features
ENABLE_YOUTUBE_TRANSCRIPT=true
ENABLE_WEB_SCRAPING=true

# Logging
LOG_LEVEL=INFO
DEBUG=false

# ============================================================================
# Notes
# ============================================================================
# 1. Never commit the .env file to version control
# 2. Keep your API keys secure and private
# 3. At minimum, you need ONE AI provider API key configured
# 4. Supported providers: OpenAI, Anthropic, Google, Azure, Ollama, and more
# 5. Run 'fabric --setup' to configure providers interactively
