{
  "name": "fabric",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "prebuild": "mkdir -p static/data && touch static/data/pattern_descriptions.json",
    "predev": "mkdir -p static/data && touch static/data/pattern_descriptions.json",
    "dev": "vite dev",
    "dev:infisical": "infisical run --env=dev -- npm run dev",
    "build": "svelte-kit sync && vite build",
    "build:infisical": "infisical run --env=prod -- npm run build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write .",
    "secrets:init": "infisical init",
    "env:pull:dev": "infisical export --env=dev --format=dotenv --output-file=.env",
    "env:pull:prod": "infisical export --env=prod --format=dotenv --output-file=.env",
    "docker:up": "./scripts/docker-up.sh dev",
    "docker:up:prod": "./scripts/docker-up.sh prod",
    "docker:up:build": "./scripts/docker-up.sh dev --build",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "dev:doppler": "doppler run -- npm run dev",
    "build:doppler": "doppler run -- npm run build",
    "start": "node build",
    "env:validate": "node scripts/validate-env.mjs",
    "verify:release": "npm run env:validate && npm run check && npm run build && npm run test"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@playwright/test": "^1.58.2",
    "@skeletonlabs/skeleton": "^2.11.0",
    "@skeletonlabs/tw-plugin": "^0.3.1",
    "@sveltejs/adapter-node": "^5.5.3",
    "@sveltejs/kit": "^2.52.0",
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@tailwindcss/forms": "^0.5.11",
    "@tailwindcss/typography": "^0.5.16",
    "@types/node": "^25.2.3",
    "autoprefixer": "^10.4.24",
    "bits-ui": "^2.15.6",
    "eslint-plugin-svelte": "^2.46.1",
    "lucide-svelte": "^0.574.0",
    "mdsvex": "^0.12.6",
    "patch-package": "^8.0.1",
    "pdf-to-markdown-core": "github:jzillmann/pdf-to-markdown#modularize",
    "pdfjs-dist": "^5.4.449",
    "postcss": "^8.5.3",
    "postcss-load-config": "^6.0.1",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-slug": "^6.0.0",
    "shiki": "^3.22.0",
    "svelte": "^5.51.3",
    "svelte-check": "^4.4.0",
    "svelte-inview": "^4.0.4",
    "svelte-reveal": "^1.1.0",
    "svelte-youtube-lite": "^1.2.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.8.3",
    "vite": "^7.3.1",
    "vite-plugin-tailwind-purgecss": "^0.3.5",
    "vitest": "^4.0.18"
  },
  "type": "module",
  "overrides": {
    "qs": ">=6.14.1",
    "form-data": ">=2.5.4",
    "glob": ">=10.5.0",
    "tunnel-agent": ">=0.6.0",
    "hawk": ">=9.0.1",
    "http-signature": ">=0.10.0",
    "mime": ">=1.4.1",
    "hoek": ">=4.2.1",
    "cookie": ">=0.7.0",
    "tough-cookie": ">=4.1.3",
    "esbuild": ">=0.25.0",
    "@eslint/plugin-kit": ">=0.3.4"
  },
  "dependencies": {
    "@floating-ui/dom": "^1.7.0",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "highlight.js": "^11.11.1",
    "marked": "^17.0.3",
    "nanoid": "5.0.9",
    "rehype": "^13.0.2",
    "rehype-external-links": "^3.0.0",
    "rehype-unwrap-images": "^1.0.0",
    "tailwind-merge": "^3.4.1",
    "vfile-message": "^4.0.2",
    "yaml": "^2.8.0",
    "youtube-transcript": "^1.2.1"
  },
  "pnpm": {
    "overrides": {
      "tunnel-agent@<0.6.0": ">=0.6.0",
      "qs@<6.0.4": ">=6.0.4",
      "qs@<1.0.0": ">=1.0.0",
      "qs@<6.14.1": ">=6.14.1",
      "hawk@<3.1.3": ">=3.1.3",
      "http-signature@<0.10.0": ">=0.10.0",
      "request@>=2.2.6 <2.47.0": ">=2.68.0",
      "mime@<1.4.1": ">=1.4.1",
      "hoek@<4.2.1": ">=4.2.1",
      "hawk@<9.0.1": ">=9.0.1",
      "qs@<6.2.4": ">=6.2.4",
      "cookie@<0.7.0": ">=0.7.0",
      "tough-cookie@<4.1.3": ">=4.1.3",
      "nanoid@<3.3.8": ">=3.3.8",
      "form-data@<2.5.4": ">=2.5.4",
      "glob@>=10.2.0 <10.5.0": ">=10.5.0",
      "esbuild@<=0.24.2": ">=0.25.0",
      "@eslint/plugin-kit@<0.3.4": ">=0.3.4"
    },
    "onlyBuiltDependencies": [
      "esbuild",
      "pdf-to-markdown-core",
      "svelte-preprocess"
    ]
  }
}
